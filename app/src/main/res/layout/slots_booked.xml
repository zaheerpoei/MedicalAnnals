<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/doctors_dashboard"
    android:id="@+id/constraint_main_slots_booked"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_patient_pic_booked_slots"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/default_profile_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_patient_name_booked_slots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:text="Ali Ahmed"
        android:lines="1"
        android:textColor="@color/dark_blue_700"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_booked_slots_time"
        app:layout_constraintStart_toEndOf="@+id/iv_patient_pic_booked_slots"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_booked_slots_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_10_2_2022"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="@id/tv_patient_name_booked_slots"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_patient_name_booked_slots"
        app:layout_constraintTop_toBottomOf="@+id/tv_patient_name_booked_slots" />



    <TextView
        android:id="@+id/tv_booked_slots_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:00 PM"
        android:layout_marginEnd="@dimen/_10sdp"
        android:textSize="@dimen/_17ssp"
        android:textColor="@color/dark_blue_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>